<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50px">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:id="@+id/btnExcluirItem"
            android:background="@android:drawable/ic_delete"
            android:layout_marginLeft="250px"/>

        <TextView
            android:id="@+id/lblPosicaoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/lblNomeProdutoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto: "
            android:textSize="25px"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/lblNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto de teste "
            android:textSize="20px" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/lblCdBarraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código: "
            android:textSize="25px"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/lblCdBarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="20px" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/lblQtdeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qtde: "
            android:textSize="25px"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/lblQtde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="20px" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/lblPosicaoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posição: "
            android:textSize="25px"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/lblPosicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A2"
            android:textSize="20px" >
        </TextView>
    </LinearLayout>

</LinearLayout>